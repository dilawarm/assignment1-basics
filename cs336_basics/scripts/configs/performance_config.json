{
  "training_mode": "fast",
  "experiment_name": "unified_performance_training",
  "experiment_description": "High-performance unified training for powerful hardware",
  
  "vocab_size": 50304,
  "context_length": 2048,
  "num_layers": 24,
  "d_model": 2048,
  "num_heads": 32,
  "d_ff": 8192,
  "rope_theta": 10000.0,
  "window_size": 1024,
  "use_qk_norm": true,
  "use_flex_attention": false,
  "use_swiglu": true,
