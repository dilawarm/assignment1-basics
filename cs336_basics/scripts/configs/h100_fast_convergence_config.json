{
    "vocab_size": 32000,
    "context_length": 256,
    "num_layers": 12,
    "d_model": 768,
    "num_heads": 12,
    "d_ff": 2048,
    "rope_theta": 10000,
    "use_squared_relu": true,
    "tie_embeddings": true,
    
