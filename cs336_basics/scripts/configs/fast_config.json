{
  "training_mode": "fast",
  "experiment_name": "unified_fast_training",
  "experiment_description": "Fast unified training with speed optimizations",
  
  "vocab_size": 50304,
  "context_length": 1024,
  "num_layers": 12,
  "d_model": 1280,
  "num_heads": 20,
  "d_ff": 5120,
  "rope_theta": 10000.0,
  "window_size": 512,
  "use_qk_norm": true,
  "use_flex_attention": false,
  "use_swiglu": true,
  "tie_embeddings": true,
  
  "weight_decay": 0.1,
  "betas": [0.9, 0.95],
  "muon_momentum": 0.95,
  "eps": 1e-8,
  
  "max_learning_rate": 0.006,
  "min_learning_rate": 0.0006,
  "warmup_iters": 300,
  "cosine_cycle_iters": 8000,
  
  "training_set": "data/encoded/owt_train_tokens.npy",
  "validation_set": "data/encoded/owt_valid_tokens.npy",
  
  "validation_step_interval": 120,
  "checkpoint_step_interval": 1200,
  "steps": 8000,
  "batch_size": 40,
  "gradient_accumulation_steps": 2,
  "gradient_clipping": 1.0,
  
  "device": "cuda",
  "compile_model": true,
  "compile_mode": "reduce-overhead",
  "use_mixed_precision": true,
  "use_efficient_attention": true,
  "use_fused_kernels": true,
  
  "enable_stability_monitoring": true,
  "gradient_norm_threshold": 15.0,
  "loss_spike_threshold": 4.0,
  "nan_tolerance": 3,
  "enable_stable_initialization": false,
  "enable_torch_optimizations": true,
  "eval_batch_count": 20,
  
  "use_wandb": true,
  "wandb_project": "cs336-assignment1",
