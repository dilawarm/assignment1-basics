{
  "training_mode": "stable",
  "experiment_name": "unified_stable_training",
  "experiment_description": "Ultra-stable unified training with maximum robustness",
  
  "vocab_size": 32000,
  "context_length": 512,
  "num_layers": 8,
  "d_model": 768,
  "num_heads": 12,
  "d_ff": 3072,
  "rope_theta": 10000.0,
  "window_size": 256,
  "use_qk_norm": true,
  "use_flex_attention": false,
  "use_swiglu": true,
  "tie_embeddings": true,
  
  "weight_decay": 0.01,
  "betas": [0.9, 0.999],
  "muon_momentum": 0.95,
  "eps": 1e-8,
  
  "max_learning_rate": 0.001,
  "min_learning_rate": 0.00001,
  "warmup_iters": 200,
  "cosine_cycle_iters": 2000,
  
  "training_set": "data/encoded/owt_train_tokens.npy",
  "validation_set": "data/encoded/owt_valid_tokens.npy",
  
  "validation_step_interval": 100,
  "checkpoint_step_interval": 500,
  "steps": 2000,
  "batch_size": 16,
  "gradient_accumulation_steps": 2,
  "gradient_clipping": 0.5,
  
  "device": "cuda",
  "compile_model": false,
  "compile_mode": "default",
  "use_mixed_precision": false,
  "use_efficient_attention": true,
  "use_fused_kernels": true,
  
  "enable_stability_monitoring": true,
  "gradient_norm_threshold": 5.0,
  "loss_spike_threshold": 2.0,
  "nan_tolerance": 1,
  "enable_stable_initialization": true,
  "enable_torch_optimizations": true,
  "eval_batch_count": 20,
  
  "use_wandb": true,
  "wandb_project": "cs336-assignment1",
  "wandb_entity": "",
  "log_dir": "experiments"
} 