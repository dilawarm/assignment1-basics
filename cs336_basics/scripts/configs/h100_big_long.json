{
    "vocab_size": 32000,
    "context_length": 512,
    "num_layers": 12,
    "d_model": 1024,
    "num_heads": 16,
    "d_ff": 4096,
    "rope_theta": 10000,

    "optimizer": "lion",
    "weight_decay": 0.1,
    "betas": [0.9, 0.95],
    "max_learning_rate": 2.0e-4,
    "min_learning_rate": 2.0e-5,
    "warmup_iters": 4000,
    "cosine_cycle_iters": 80000,

    "batch_size": 24,
    "gradient_accum": 3,
    "gradient_clipping": 1.0,
    "gradient_checkpointing": true,

    "dropout_p": 0.05,
    "flood_level": 0.02,

    "steps": 80000,
    "validation_step_interval": 800,
    "checkpoint_step_interval": 8000,

    "device": "cuda",
    "compile_model": true,

    "experiment_name": "h100_big_1B_tokens",
    "use_wandb": true,
    "log_dir": "experiments"
}